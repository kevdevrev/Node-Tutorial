extends layouts\main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid 
                each product in prods 
                    article.card.product-item
                        header.card__header 
                            h1.product__title #{product.title} 
                        .card__image 
                            img(src="http://www.lovethispic.com/uploaded_images/71879-Cute-Turtle.jpg", alt="A book")
                        .card__content 
                            h2.product__price $19.99
                            p.product__description A very interesting turtle story 
                        .card_actions 
                            button.btn Add to Cart 
        else 
            h1 No Products


